@page "/ConsultaDePrioridades"
@inject PrioridadesService prioridadesService
@rendermode InteractiveServer

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <label>Filtrar por PrioridadId:</label>
            <div class="input-group">
                <InputNumber @bind-Value="filtro" class="form-control"></InputNumber>
                <div class="input-group-append">
                    <button type="button" class="btn btn-primary bi bi-search" @onclick="Buscar">Buscar</button>
                    <button type="button" class="btn btn-primary bi bi-arrow-clockwise" @onclick="Nuevo"></button>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>PrioridadId</th>
                    <th>Descripcion</th>
                    <th>DiasCompromiso</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Lista_De_Prioridades)
                {
                    <tr>
                        <td><a href="RegistroDePrioridades/@item.PrioridadId">@item.PrioridadId</a></td>
                        <td>@item.Descripcion</td>
                        <td>@item.DiasCompromiso</td>

                    </tr>
                }   
            </tbody>
        </table>
    </div>
</div>

@code {
    public Prioridades prioridad { get; set; } = new Prioridades();
    public int filtro { get; set; }
    public List<Prioridades> Lista_De_Prioridades { get; set; } = new List<Prioridades>();
    public bool Encontrado { get; set; } = false;

    public void Buscar()
    {
        Lista_De_Prioridades = prioridadesService.Listar(lp => lp.PrioridadId == filtro);
        if (Lista_De_Prioridades.Count == 0)
        {
            Encontrado = true;
        }
        else
        {
            Encontrado = false;
        }
    }

    public void Nuevo()
    {
        Lista_De_Prioridades = prioridadesService.Listar(lp => true);
    }
}
